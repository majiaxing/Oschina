<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dongtan_lin"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Top_Group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#42f185">
        <ImageView
            android:id="@+id/Back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_brows_back"
            />
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动弹详情"
            android:textColor="#ffffff"
            android:textSize="18sp"

            android:id="@+id/Title_Text"
            />

    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/Top_Group"
        android:id="@+id/item_newsdongtan_author_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_below="@+id/Top_Group"
        android:id="@+id/item_newsdongtan_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_newsdongtan_author_head"
        android:text="亚麻籽"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_newsdongtan_author_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_newsdongtan_author_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/item_newsdongtan_author_head"
        android:text="突然想起了毕业照的拍立得"
        android:textColor="#000" />
    <ImageView
        android:id="@+id/item_newsdongtan_author_ImageView"
        android:layout_marginTop="8dp"
        android:layout_below="@id/item_newsdongtan_author_body"
        android:layout_toRightOf="@id/item_newsdongtan_author_head"
        android:layout_width="150dp"
        android:layout_height="80dp"></ImageView>
    <RelativeLayout
        android:id="@+id/sd"
        android:layout_toRightOf="@id/item_newsdongtan_author_head"
        android:layout_below="@id/item_newsdongtan_author_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_newsdongtan_author_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="18dp"
            android:text="2分钟前"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_newsdongtan_author_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/item_newsdongtan_author_date"
            android:text="Android"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_newsdongtan_author_zhuanfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/zff"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_newsdongtan_author_pinlun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@id/item_newsdongtan_author_zhuanfa"
            android:drawableLeft="@drawable/ic_comment_30"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_newsdongtan_author_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp"

            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@id/item_newsdongtan_author_pinlun"
            android:drawableLeft="@drawable/ic_thumb_normal"
            android:drawablePadding="3dp"
            android:textColor="#000" />

    </RelativeLayout>
 <LinearLayout
     android:orientation="vertical"
     android:id="@+id/ee"
     android:layout_below="@+id/sd"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >
     <android.support.design.widget.TabLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/mTab"
         app:tabTextColor="#cacaca"
         app:tabSelectedTextColor="#24cf5f"
         app:tabIndicatorColor="#24cf5f"
         ></android.support.design.widget.TabLayout>

     <android.support.v4.view.ViewPager
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/mViewPager"
         ></android.support.v4.view.ViewPager>
 </LinearLayout>



</RelativeLayout>
